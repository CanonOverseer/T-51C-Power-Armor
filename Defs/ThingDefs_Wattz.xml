<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Normal Wattz Gun -->

  <ThingDef Name="FCP_Gun_Wattz_Laser" ParentName="BaseHumanMakeableGun">
    <defName>FCP_Gun_Wattz_Laser</defName>
    <label>Wattz Laser Gun</label>
    <description>to do</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Weapons/WattzRifleA</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.2, 1.2)</drawSize>
    </graphicData>
    <equippedAngleOffset>35</equippedAngleOffset>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>45000</WorkToMake>
      <Mass>4.8</Mass>
      <AccuracyTouch>0.40</AccuracyTouch>
      <AccuracyShort>0.55</AccuracyShort>
      <AccuracyMedium>0.64</AccuracyMedium>
      <AccuracyLong>0.80</AccuracyLong>
      <RangedWeapon_Cooldown>2.6</RangedWeapon_Cooldown>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>9</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Plasteel>60</Plasteel>
      <Steel>20</Steel>
      <ComponentSpacer>4</ComponentSpacer>
    </costList>
    <thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <weaponTags>
      <li>SpacerGun</li>
      <li>SniperRifle</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Wattz_ProjectileSniper</defaultProjectile>
        <warmupTime>2.0</warmupTime>
        <range>34.5</range>
        <soundCast>Shot_Wattz_Laser</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="FCP_Gun_Wattz_Laser">
    <defName>FCP_Gun_Wattz_Laser_Enclave</defName>
    <label>Wattz Laser Gun (Enclave)</label>
    <graphicData>
      <texPath>Weapons/WattzRifleAE</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.2, 1.2)</drawSize>
    </graphicData>
  </ThingDef>

  <!-- Auto Wattz Gun -->

  <ThingDef Name="FCP_Gun_Wattz_Laser_Auto" ParentName="BaseHumanMakeableGun">
    <defName>FCP_Gun_Wattz_Laser_Auto</defName>
    <label>Wattz Automatic Laser Gun</label>
    <description>to do</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Weapons/WattzRifleB</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.2, 1.2)</drawSize>
    </graphicData>
    <equippedAngleOffset>35</equippedAngleOffset>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>55000</WorkToMake>
      <Mass>4.8</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.75</AccuracyMedium>
      <AccuracyLong>0.55</AccuracyLong>
      <RangedWeapon_Cooldown>1.40</RangedWeapon_Cooldown>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>9</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Plasteel>50</Plasteel>
      <Steel>30</Steel>
      <ComponentIndustrial>7</ComponentIndustrial>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <weaponTags>
      <li>SpacerGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Wattz_ProjectileAuto</defaultProjectile>
        <warmupTime>1.15</warmupTime>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <burstShotCount>4</burstShotCount>
        <range>18.5</range>
        <soundCast>Shot_Wattz_Laser</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="FCP_Gun_Wattz_Laser_Auto">
    <defName>FCP_Gun_Wattz_Laser_Auto_Enclave</defName>
    <label>Wattz Automatic Laser Gun (Enclave)</label>
    <graphicData>
      <texPath>Weapons/WattzRifleBE</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.2, 1.2)</drawSize>
    </graphicData>
  </ThingDef>


  <!-- Bullet Defs -->

  <DamageDef>
    <defName>Wattz_DamageDef</defName>
    <label>beam</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has been blasted to death.</deathMessage>
    <hediff>Burn</hediff>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Electric</impactSoundType>
    <armorCategory>Heat</armorCategory>
    <overkillPctToDestroyPart>0~0.7</overkillPctToDestroyPart>
    <isRanged>true</isRanged>
    <makesAnimalsFlee>true</makesAnimalsFlee>
    <makesBlood>false</makesBlood>
  </DamageDef>

  <FleckDef ParentName="FleckBase">
    <defName>Wattz_RedLaserFlash</defName>
    <altitudeLayer>Gas</altitudeLayer>
    <solidTime>0.11</solidTime>
    <fadeInTime>0.06</fadeInTime>
    <fadeOutTime>0.22</fadeOutTime>
    <growthRate>4</growthRate>
    <graphicData>
      <texPath>Projectile/BrightFlashRed</texPath>
      <shaderType>MoteGlow</shaderType>
      <color>(255,128,128)</color>
    </graphicData>
  </FleckDef>

  <ThingDef Name="Wattz_ProjectileBase" ParentName="BaseBullet" Abstract="True">
    <label>laser beam</label>
    <graphicData>
      <texPath>Projectile/Bullet_Nothing</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <comps>
      <li Class="AthenaFramework.CompProperties_ProjectileTrail">
        <beamDef>Wattz_SniperBeam</beamDef> <!-- Def for an Athena beam -->
      </li>
      <li Class="AthenaFramework.CompProperties_ProjectileImpactEffect">
        <fleck>Wattz_RedLaserFlash</fleck>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="Wattz_ProjectileBase">
    <defName>Wattz_ProjectileSniper</defName>
    <label>laser beam</label>
    <projectile>
      <damageDef>Wattz_DamageDef</damageDef>
      <damageAmountBase>24</damageAmountBase>
      <stoppingPower>1.2</stoppingPower>
      <armorPenetrationBase>0.65</armorPenetrationBase>
      <speed>165</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="Wattz_ProjectileBase">
    <defName>Wattz_ProjectileAuto</defName>
    <label>laser beam</label>
    <projectile>
      <damageDef>Wattz_DamageDef</damageDef>
      <damageAmountBase>13</damageAmountBase>
      <armorPenetrationBase>0.45</armorPenetrationBase>
      <speed>140</speed>
    </projectile>
  </ThingDef>

  <ThingDef>
    <defName>Wattz_SniperBeam</defName>
    <label>laser beam</label>
    <description>An active beam made using athena framework.</description>
    <thingClass>AthenaFramework.Beam</thingClass>
    <graphicData>
      <texPath>Projectile/Bullet_Wattz_Bolt</texPath>
      <shaderType>MoteGlow</shaderType>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1, 1)</drawSize>
    </graphicData>
    <drawOffscreen>true</drawOffscreen>
    <category>Projectile</category>
    <tickerType>Normal</tickerType>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <useHitPoints>false</useHitPoints>
    <selectable>false</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <drawerType>RealtimeOnly</drawerType>

    <modExtensions>
      <li Class="AthenaFramework.BeamExtension">
        <maxRange>40.9</maxRange>
        <textureFrameAmount>1</textureFrameAmount>
        <textureChangeDelay>1</textureChangeDelay>
        <sizeTextureAmount>1</sizeTextureAmount>
      </li>
    </modExtensions>
    <comps>
      <li Class="AthenaFramework.CompProperties_BeamFadeout">
        <fadeoutTicks>25</fadeoutTicks>
      </li>
    </comps>
  </ThingDef>
</Defs>