<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- T51C Armor -->
  <ThingDef ParentName="ArmorMachineableBase">
    <defName>FCP_T51C_Armor_Enclave</defName>
    <label>T-51X Enclave Airforce Power Armor</label>
    <description>This variant of the T-51C is a more advanced variant developed by the enclave.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Armor/T51C/enclave/chest</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <generateCommonality>0</generateCommonality>
    <statBases>
      <WorkToMake>70000</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>10</Mass>
      <Flammability>0.15</Flammability>
      <ArmorRating_Sharp>1.6</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.85</ArmorRating_Blunt>
      <ArmorRating_Heat>0.70</ArmorRating_Heat>
      <Insulation_Cold>40</Insulation_Cold>
      <Insulation_Heat>40</Insulation_Heat>
      <EquipDelay>14</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.3</SlaveSuppressionOffset>
      <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.4</ToxicEnvironmentResistance>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <tradeTags>
      <li>HiTechArmor</li>
      <li>Armor</li>
    </tradeTags>
    <costList>
      <ComponentSpacer>6</ComponentSpacer>
      <Plasteel>140</Plasteel>
      <Uranium>20</Uranium>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
        <li>Hands</li>
        <li>Feet</li>
      </bodyPartGroups>
      <wornGraphicPath>Armor/T51C/enclave/chest</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
      <tags>
        <li>SpacerMilitary</li>
      </tags>
    </apparel>
    <thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
    </thingSetMakerTags>
    <comps>
      <li Class="AthenaFramework.CompProperties_CustomApparelBody">
        <preventBodytype>true</preventBodytype>
        <forcedBodytype>Hulk</forcedBodytype>
      </li>
    </comps>
  </ThingDef>


  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>FCP_T51C_Helmet_Enclave</defName>
    <label>T-51X Enclave Airforce Power Armor Helmet</label>
    <description>the Helmet for the Airforce Mark C Variant of the T-51 Power Armor is much
      different than the default model and it comes with abilities non standard in the regular t51
      model such as being able to breathe out of atmosphere and withstand high G-Forces, it also
      shows a heads up display which can link to a standard military aircraft, the Enclave variant has a built in gunlink</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisites>
        <li>PoweredArmor</li>
        <li>Gunlink</li>
      </researchPrerequisites>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Armor/T51C/enclave/head</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.25</uiIconScale>
    <tradeTags>
      <li>HiTechArmor</li>
      <li>Armor</li>
    </tradeTags>
    <generateCommonality>0</generateCommonality>
    <statBases>
      <WorkToMake>25000</WorkToMake>
      <MaxHitPoints>140</MaxHitPoints>
      <Mass>1.5</Mass>
      <Flammability>0.1</Flammability>
      <ArmorRating_Sharp>1.50</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.80</ArmorRating_Blunt>
      <ArmorRating_Heat>0.70</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.3</SlaveSuppressionOffset>
      <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.6</ToxicEnvironmentResistance>
      <ToxicResistance>0.5</ToxicResistance>
      <ShootingAccuracyPawn>2</ShootingAccuracyPawn>
    </equippedStatOffsets>
    <costList>
      <ComponentSpacer>4</ComponentSpacer>
      <ComponentIndustrial>5</ComponentIndustrial>
      <Plasteel>40</Plasteel>
      <Uranium>15</Uranium>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Armor/T51C/enclave/head</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
      <tags>
        <li>SpacerMilitary</li>
        <li>Gunlink</li>
      </tags>
    </apparel>
    <thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
    </thingSetMakerTags>
  </ThingDef>
</Defs>