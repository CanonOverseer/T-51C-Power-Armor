<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- T51C Armor -->
  <ThingDef ParentName="ArmorMachineableBase">
    <defName>FCP_T51C_Armor</defName>
    <label>T-51C Airforce Power Armor</label>
    <description>The T51 Model C or the Airforce Power Armor is an Variation of the T51 Pattern
      Power Armor created by the Airforce to suit their needs better, it can connect to the onboard
      aircraft flight systems and provide the user a heads up interface, it is also designed to help
      you withstand high g-forces and long falls for paratrooper missions.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Armor/T51C/chest</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <WorkToMake>70000</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>10</Mass>
      <Flammability>0.15</Flammability>
      <ArmorRating_Sharp>1.5</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.8</ArmorRating_Blunt>
      <ArmorRating_Heat>0.70</ArmorRating_Heat>
      <Insulation_Cold>40</Insulation_Cold>
      <Insulation_Heat>40</Insulation_Heat>
      <EquipDelay>14</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.3</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <tradeTags>
      <li>HiTechArmor</li>
    </tradeTags>
    <costList>
      <ComponentSpacer>5</ComponentSpacer>
      <Plasteel>150</Plasteel>
      <Uranium>30</Uranium>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
        <li>Hands</li>
        <li>Feet</li>
      </bodyPartGroups>
      <wornGraphicPath>Armor/T51C/chest</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
      <tags>
        <li>SpacerMilitary</li>
      </tags>
    </apparel>
    <thingSetMakerTags>
      <li>RewardStandardHighFreq</li>
    </thingSetMakerTags>
    <modExtensions>
      <li Class="FalloutCore.ApparelExtension">
        <shouldHideBody>true</shouldHideBody>
      </li>
    </modExtensions>
  </ThingDef>


  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>FCP_T51C_Helmet</defName>
    <label>T-51C Airforce Power Armor Helmet</label>
    <description>the Helmet for the Airforce Mark C Variant of the T-51 Power Armor is much
      different than the default model and it comes with abilities non standard in the regular t51
      model such as being able to breathe out of atmosphere and withstand high G-Forces, it also
      shows a heads up display which can link to a standard military aircraft.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Armor/T51C/head</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.25</uiIconScale>
    <tradeTags>
      <li>HiTechArmor</li>
    </tradeTags>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <WorkToMake>25000</WorkToMake>
      <MaxHitPoints>140</MaxHitPoints>
      <Mass>1.5</Mass>
      <Flammability>0.1</Flammability>
      <ArmorRating_Sharp>1.50</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.80</ArmorRating_Blunt>
      <ArmorRating_Heat>0.70</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.3</SlaveSuppressionOffset>
      <ToxicSensitivity>-1.0</ToxicSensitivity>
    </equippedStatOffsets>
    <costList>
      <ComponentSpacer>2</ComponentSpacer>
      <ComponentIndustrial>5</ComponentIndustrial>
      <Plasteel>40</Plasteel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>T51C/head_south</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
      <tags>
        <li>SpacerMilitary</li>
      </tags>
    </apparel>
    <thingSetMakerTags>
      <li>RewardStandardHighFreq</li>
    </thingSetMakerTags>
  </ThingDef>
</Defs>